<Window x:Class="Zad4_december1_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zad4_december1_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="103*"/>
            <RowDefinition Height="190*"/>
            <RowDefinition Height="126*"/>
        </Grid.RowDefinitions>
        <Label x:Name="label1"/>
        <StackPanel Grid.Row="1">
            <Label Content="Маршрут:" Grid.Column="0"/>
            <TextBox x:Name="txtBoxRoute" Height="28"  Width="532" HorizontalAlignment="Left"/>
            <Label Content="Срок пользования больше:"/>
            <TextBox x:Name="txtBoxExp" Height="28"  Width="532" HorizontalAlignment="Left"/>
            <Label Content="Пробег больше:"/>
            <TextBox x:Name="txtBoxProbeg" Height="28"  Width="532" HorizontalAlignment="Left"/>
        </StackPanel>
        <Button Content="Результат" Click="click" Grid.Row="2"/>
    </Grid>
</Window>
